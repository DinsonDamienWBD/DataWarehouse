<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>DataWarehouse.Plugins.DataConnectors</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\DataWarehouse.SDK\DataWarehouse.SDK.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- PostgreSQL driver -->
    <PackageReference Include="AWSSDK.Core" Version="4.0.3.12" />
    <PackageReference Include="Azure.Identity" Version="1.17.1" />
    <PackageReference Include="BouncyCastle.Cryptography" Version="2.6.2" />
    <PackageReference Include="Net.IBM.Data.Db2" Version="9.0.0.400" />
    <PackageReference Include="Npgsql" Version="10.0.1" />
    <!-- Kafka client -->
    <PackageReference Include="Confluent.Kafka" Version="2.13.0" />
    <!-- Snowflake driver -->
    <PackageReference Include="Snowflake.Data" Version="5.3.0" />
    <!-- Redis client -->
    <PackageReference Include="StackExchange.Redis" Version="2.10.14" />
    <!-- Google BigQuery client -->
    <PackageReference Include="Google.Cloud.BigQuery.V2" Version="3.11.0" />
    <!-- MySQL client -->
    <PackageReference Include="MySqlConnector" Version="2.5.0" />
    <!-- MongoDB client -->
    <PackageReference Include="MongoDB.Driver" Version="3.6.0" />
    <!-- SQL Server client -->
    <PackageReference Include="Microsoft.Data.SqlClient" Version="6.1.4" />
    <!-- SQLite client -->
    <PackageReference Include="Microsoft.Data.Sqlite" Version="10.0.2" />
    <!-- Cassandra client -->
    <PackageReference Include="CassandraCSharpDriver" Version="3.22.0" />
    <!-- RabbitMQ client -->
    <PackageReference Include="RabbitMQ.Client" Version="7.2.0" />
    <!-- Apache Pulsar client -->
    <PackageReference Include="DotPulsar" Version="5.1.2" />
    <!-- NATS client -->
    <PackageReference Include="NATS.Net" Version="2.7.2-preview.2" />
    <!-- Oracle client -->
    <PackageReference Include="Oracle.ManagedDataAccess.Core" Version="23.26.100" />
    <!-- IBM DB2 client for Mainframe -->
    <!-- AWS SDK for S3 -->
    <PackageReference Include="AWSSDK.S3" Version="4.0.18.2" />
    <!-- Polly for resilience and transient fault handling -->
    <PackageReference Include="Polly" Version="8.6.5" />
    <!-- Azure Storage Blobs -->
    <PackageReference Include="Azure.Storage.Blobs" Version="12.27.0" />
    <!-- Google Cloud Storage -->
    <PackageReference Include="Google.Cloud.Storage.V1" Version="4.14.0" />
    <!-- ODBC for AS/400 and legacy systems -->
    <PackageReference Include="System.Data.Odbc" Version="10.0.2" />
  </ItemGroup>
</Project>
