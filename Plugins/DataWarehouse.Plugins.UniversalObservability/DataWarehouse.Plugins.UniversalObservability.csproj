<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>DataWarehouse.Plugins.UniversalObservability</RootNamespace>
    <Description>Universal Observability plugin (T100) - 50+ observability strategies including metrics (Prometheus, Datadog, CloudWatch), logging (ELK, Splunk, Loki), tracing (Jaeger, Zipkin, OpenTelemetry), APM (New Relic, Dynatrace), alerting (PagerDuty, OpsGenie), and health monitoring (Nagios, Zabbix)</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\DataWarehouse.SDK\DataWarehouse.SDK.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OpenTelemetry" Version="1.15.0" />
    <PackageReference Include="OpenTelemetry.Api" Version="1.15.0" />
    <PackageReference Include="OpenTelemetry.Exporter.Prometheus.AspNetCore" Version="1.9.*-*" />
    <PackageReference Include="Prometheus-net" Version="8.2.*" />
    <PackageReference Include="Serilog" Version="4.3.0" />
    <PackageReference Include="Serilog.Sinks.Elasticsearch" Version="10.0.*" />
    <PackageReference Include="AWSSDK.CloudWatch" Version="4.0.6.7" />
    <PackageReference Include="Azure.Monitor.OpenTelemetry.Exporter" Version="1.6.0" />
    <PackageReference Include="Google.Cloud.Monitoring.V3" Version="3.16.0" />
    <PackageReference Include="InfluxDB.Client" Version="5.0.0" />
    <PackageReference Include="StatsdClient" Version="3.0.*" />
  </ItemGroup>

</Project>
