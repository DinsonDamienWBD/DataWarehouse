<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>DataWarehouse.Plugins.UltimateKeyManagement</RootNamespace>
    <Description>Ultimate Key Management orchestrator with auto-discovery, strategy registry, and key rotation scheduling</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\DataWarehouse.SDK\DataWarehouse.SDK.csproj" />
  </ItemGroup>

  <!-- Common HTTP/JSON packages for REST API-based strategies -->
  <ItemGroup>
    <PackageReference Include="System.Net.Http.Json" Version="10.0.2" />
  </ItemGroup>

  <!-- PKCS#11 Interop for HSM hardware security module integration -->
  <ItemGroup>
    <PackageReference Include="Pkcs11Interop" Version="5.3.0" />
  </ItemGroup>

  <!-- Platform-specific keychain strategies -->
  <ItemGroup>
    <!-- BouncyCastle for PGP keyring support -->
    <PackageReference Include="BouncyCastle.Cryptography" Version="2.6.2" />
    <!-- SSH.NET for SSH agent integration -->
    <PackageReference Include="SSH.NET" Version="2025.1.0" />
  </ItemGroup>

  <!-- AWS SDK for CloudHSM V2 management and HSM operations -->
  <ItemGroup>
    <PackageReference Include="AWSSDK.CloudHSMV2" Version="4.0.*" />
  </ItemGroup>

  <!-- Azure SDK for Managed HSM / Dedicated HSM key operations -->
  <ItemGroup>
    <PackageReference Include="Azure.Security.KeyVault.Keys" Version="4.8.0" />
    <PackageReference Include="Azure.Identity" Version="1.17.1" />
  </ItemGroup>

  <!-- Google Cloud SDK for Cloud HSM (Cloud KMS with HSM protection) -->
  <ItemGroup>
    <PackageReference Include="Google.Cloud.Kms.V1" Version="3.21.0" />
  </ItemGroup>

  <!-- Hardware Token Strategies -->
  <ItemGroup>
    <!-- TPM 2.0 support via Microsoft.TSS (Microsoft TPM 2.0 Library) -->
    <PackageReference Include="Microsoft.TSS" Version="2.1.1" />
    <!-- YubiKey support via official Yubico SDK -->
    <PackageReference Include="Yubico.YubiKey" Version="1.15.1" />
    <!-- FIDO2/WebAuthn support for SoloKey and other FIDO2 devices -->
    <PackageReference Include="Fido2.Models" Version="4.0.0" />
    <PackageReference Include="Fido2" Version="4.0.0" />
    <!-- HID communication for hardware wallets (Ledger, Trezor, OnlyKey) -->
    <PackageReference Include="HidSharp" Version="2.6.4" />
  </ItemGroup>

  <!-- Container/Orchestration Strategies -->
  <ItemGroup>
    <!-- Kubernetes client for K8s Secrets, External Secrets Operator, and Sealed Secrets -->
    <PackageReference Include="KubernetesClient" Version="18.0.13" />
    <!-- YAML parsing for SOPS and Kubernetes manifests -->
    <PackageReference Include="YamlDotNet" Version="16.3.*" />
  </ItemGroup>

  <!-- Password-Derived Key Strategies -->
  <ItemGroup>
    <!-- Argon2 (memory-hard KDF) - winner of Password Hashing Competition -->
    <PackageReference Include="Konscious.Security.Cryptography.Argon2" Version="1.3.*" />
    <!-- scrypt uses BouncyCastle's SCrypt.Generate (already included above) -->
    <!-- PBKDF2 is built into System.Security.Cryptography (Rfc2898DeriveBytes) -->
    <!-- Balloon hashing uses BouncyCastle (already included above) -->
  </ItemGroup>

  <!-- Threshold Cryptography Strategies -->
  <ItemGroup>
    <!--
      BouncyCastle (already included above) provides:
      - BigInteger arithmetic for finite field operations
      - secp256k1 and other elliptic curves for ECDSA/Schnorr
      - SecureRandom for cryptographic randomness

      The threshold strategies implement:
      - Shamir Secret Sharing (polynomial interpolation over GF(p))
      - MPC with Pedersen/Feldman VSS
      - GG18/GG20 Threshold ECDSA with Paillier encryption
      - BLS12-381 threshold signatures (hash-to-curve per RFC 9380)
      - FROST Schnorr threshold signatures (BIP-340 compatible)
      - Social Secret Sharing with guardian management
    -->
  </ItemGroup>

  <!-- Industry-First Strategies: Blockchain -->
  <ItemGroup>
    <!--
      Stellar SDK for StellarAnchorsStrategy.
    -->
    <PackageReference Include="stellar-dotnet-sdk" Version="14.0.1" />
    <!--
      Nethereum for SmartContractKeyStrategy (Ethereum).
      Note: Nethereum depends on Portable.BouncyCastle which conflicts with BouncyCastle.Cryptography.
      We use Aliases to disambiguate the assemblies.
    -->
    <PackageReference Include="Nethereum.Web3" Version="5.8.0" />
    <!--
      Override the transitive Portable.BouncyCastle with an aliased version.
      This allows both BouncyCastle.Cryptography and Portable.BouncyCastle to coexist.
    -->
    <PackageReference Include="Portable.BouncyCastle" Version="1.9.0" Aliases="PortableBC" />
  </ItemGroup>

</Project>
