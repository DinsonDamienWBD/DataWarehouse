<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>DataWarehouse.Plugins.WinFspDriver</RootNamespace>
    <AssemblyName>DataWarehouse.Plugins.WinFspDriver</AssemblyName>
    <Description>DataWarehouse WinFSP Driver Plugin - Windows native filesystem driver using WinFSP for mounting DataWarehouse storage as drive letters</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <Platforms>x64</Platforms>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DebugType>none</DebugType>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\DataWarehouse.SDK\DataWarehouse.SDK.csproj" />
  </ItemGroup>

  <!-- WinFSP Native Library Reference -->
  <ItemGroup>
    <PackageReference Include="Fsp" Version="2.0.23075" Condition="Exists('$(NuGetPackageRoot)fsp')" />
  </ItemGroup>

  <!-- Windows-specific APIs -->
  <ItemGroup>
    <Using Include="System.Runtime.InteropServices" />
    <Using Include="System.Security.AccessControl" />
    <Using Include="System.Security.Principal" />
  </ItemGroup>

  <!-- Windows Service Framework for VSS -->
  <ItemGroup>
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="10.0.0" />
  </ItemGroup>

</Project>
